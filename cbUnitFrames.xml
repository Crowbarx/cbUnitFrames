<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <!-- Load configuration first -->
    <Script file="Config/Config.lua"/>
    <!-- Core logic now in cbUnitFrames.lua -->
    <!-- Load modules -->
    <Script file="Modules/Player.lua"/>
    <Script file="Modules/Target.lua"/>
    <Script file="Modules/Party.lua"/>
    <!-- Add more modules as needed -->
    <Frame name="cbUnitFrames_EventFrame">
        <Scripts>
            <OnLoad>
                cbUnitFrames_OnLoad();
            </OnLoad>
            <OnEvent>
                cbUnitFrames_OnEvent(event, arg1);
            </OnEvent>
        </Scripts>
    </Frame>
</Ui>
